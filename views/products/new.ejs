<% layout('layouts/boilerplate') -%>


<div class="row">
    <div class="col-md-6 mx-auto">
        <form action="/products" method="POST">
            <div class="mb-3">
                <label class="form-label" for="name">Name : </label>
                <input class="form-control" type="text" name="name" id="name" placeholder="">
            </div>
        
            <div class="mb-3">
                <label class="form-label" for="desc">Description</label>
                <textarea class="form-control" name="desc" id="desc" rows="5"></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label" for="desc">Markdown</label>
                <textarea class="form-control" name="desc" id="desc" rows="2"></textarea>
            </div>

            <button type="" class="btn btn-sm" style="background-color: gray;">Cancel</button>
            <button type="submit" class="btn btn-sm btn-success">SAVE</button>
        </form>
    </div>
</div>